    <% layout('layout/boilerplate') %> 
    <h1>Edit Campground</h1>
    <form action="/campgrounds/<%= camp.id %>?_method=PATCH" method="POST">
        <label for="title">Title:</label>
        <input type="text" name="title" id="title" placeholder="Title" value="<%= camp.title %>">
        <label for="location">Location:</label>
        <input type="text" name="location" id="location" placeholder="Location" value="<%= camp.location %>">
        <label for="price">Price:</label>
        <input type="number" name="price" id="price" placeholder="Price" value="<%= camp.price %>">
        <button>Save Campground</button>
    </form>
