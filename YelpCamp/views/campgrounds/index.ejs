<% layout('layout/boilerplate') %> 
<div id="map" style="width: 100%; height: 40vh; margin-bottom: 5px;"></div>
<script src="/js/clusterMap.js"></script>
<script>
    const token = '<%=process.env.mapbox_token%>';
</script>
<%- include('../partials/alerts') %> 
<% for(let camp of campgrounds){ %> 
    <div class="card mb-3">
        <div class="row">
            <div class="col-lg-4 col-md-5" >
                <% if(camp.images.length){%> 
                <img src="<%=camp.images[0].url%>" alt="" class="img-fluid">
                <% }else{ %> 
                <img class="img-fluid" src="https://images.unsplash.com/photo-1528892677828-8862216f3665?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80" alt="">
                <% } %> 
            </div>
            <div class="col-lg-8 col-md-7 p-lg-2 p-md-3 p-5">
                <h5 class="card-title"><%=camp.title%></h5>
                <p class="card-text"><%=camp.description%></p>
                <p class="card-text">
                    <small class="text-muted"><%=camp.location%></small>
                </p>
                <a class="btn btn-primary" href="/campgrounds/<%=camp.id%>">View <%=camp.title%></a>
            </div>
        </div>
    </div>
<% } %> 
<script>
    const mapToken = '<%=process.env.mapbox_token%>';
    const campgrounds = {features: <%-JSON.stringify(campgrounds)%>};
</script>
